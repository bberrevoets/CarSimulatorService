{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Serilog.Sinks.Email": "Debug"
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Email",
      "Serilog.Sinks.MicrosoftTeams"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Serilog.Sinks.Email": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/errors-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Error",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Email",
        "Args": {
          "from": "alerts@localhost",
          "to": "admin@localhost",
          "host": "localhost",
          "port": 2525,
          "enableSsl": false,
          "restrictedToMinimumLevel": "Fatal",
          "subject": "ðŸš¨ CRITICAL ERROR in CarSimulatorService!",
          "batchPostingLimit": 1
        }
      },
      {
        "Name": "MicrosoftTeams",
        "Args": {
          "webHookUri":
            "https://berrevoetsnet.webhook.office.com/webhookb2/e011875f-2e11-453e-9dcb-c5faccfff262@85ebd7d3-5c9d-4d21-b0c0-6fc22e13e64c/IncomingWebhook/88de2915adef40fdb907a5ee0dc9ad7b/a52f6e66-66dc-452c-90b8-724a4ea07b4f/V2No01p1XjupVFJ_ukzfQBexxlExAmQG0uBZbwR55Eshc1",
          "title": "ðŸš¨ CarSimulatorService Fatal Error!",
          "restrictedToMinimumLevel": "Fatal"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "CarSimulatorService"
    }
  },
  "CarSimulator": {
    "ServerAddress": "127.0.0.1",
    "ServerPort": 5000,
    "RedisConnection": "localhost:6379",
    "RedisStreamKey": "car_simulator_queue",
    "TrimIntervalSeconds": 300
  }
}