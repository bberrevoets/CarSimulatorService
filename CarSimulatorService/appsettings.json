{
  "Logging": {
    "EmailThrottleMinutes": 15,
    "TeamsThrottleMinutes": 15 
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Email",
      "Serilog.Sinks.MicrosoftTeams"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Serilog.Sinks.Email": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/errors-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Error",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Email",
        "Args": {
          "from": "alerts@localhost",
          "to": "admin@localhost",
          "host": "localhost",
          "port": 2525,
          "enableSsl": false,
          "restrictedToMinimumLevel": "Fatal",
          "subject": "ðŸš¨ CRITICAL ERROR in CarSimulatorService!",
          "batchPostingLimit": 1
        }
      },
      {
        "Name": "MicrosoftTeams",
        "Args": {
          "webHookUri": "InSecrets",
          "title": "ðŸš¨ CarSimulatorService Fatal Error!",
          "restrictedToMinimumLevel": "Fatal"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "CarSimulatorService"
    }
  },
  "CarSimulator": {
    "ServerAddress": "127.0.0.1",
    "ServerPort": 5000,
    "RedisConnection": "localhost:6379",
    "RedisStreamKey": "car_simulator_queue",
    "TrimIntervalSeconds": 300
  }
}